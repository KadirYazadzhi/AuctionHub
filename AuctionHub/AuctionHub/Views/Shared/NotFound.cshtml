@{
    ViewData["Title"] = "Page Not Found";
}

<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="mb-4 text-warning animate-fade-up">
                <i class="bi bi-signpost-split display-1"></i>
            </div>
            
            <h1 class="display-1 fw-bold mb-0 text-primary animate-fade-up delay-100">404</h1>
            <h2 class="h4 text-muted mb-4 animate-fade-up delay-100">Page Not Found</h2>
            
            <p class="lead text-muted mb-5 animate-fade-up delay-200">
                The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
            </p>

            <div class="d-flex justify-content-center gap-3 animate-fade-up delay-300">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary rounded-pill px-5 py-3 shadow-sm hover-lift">
                    <i class="bi bi-house me-2"></i>Go Home
                </a>
                <a asp-controller="Auctions" asp-action="Index" class="btn btn-outline-primary rounded-pill px-5 py-3 hover-lift">
                    <i class="bi bi-search me-2"></i>Browse Auctions
                </a>
            </div>
        </div>
    </div>
</div>
