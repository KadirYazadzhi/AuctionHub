@model AuctionHub.Models.ViewModels.AuctionListViewModel

<div class="col">
    <div class="card h-100 shadow-sm">
        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/300x200?text=No+Image" : Model.ImageUrl)" 
             class="card-img-top" 
             alt="@Model.Title" 
             style="height: 200px; object-fit: cover;">
        
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="badge bg-secondary">@Model.Category</span>
                <small class="text-muted">@Model.TimeRemaining</small>
            </div>
            <h5 class="card-title text-truncate">@Model.Title</h5>
            <h4 class="card-text text-primary font-weight-bold">
                @Model.CurrentPrice.ToString("C")
            </h4>
        </div>
        <div class="card-footer bg-white border-top-0">
            <div class="d-grid">
                <a asp-controller="Auctions" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary">View Details</a>
            </div>
        </div>
    </div>
</div>
