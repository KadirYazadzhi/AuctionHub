@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="mb-4 text-danger animate-fade-up">
                <i class="bi bi-exclamation-triangle display-1"></i>
            </div>
            
            <h1 class="display-4 fw-bold mb-3 animate-fade-up delay-100">Something went wrong</h1>
            <p class="lead text-muted mb-4 animate-fade-up delay-200">
                We encountered an unexpected error while processing your request. 
                Our team has been notified.
            </p>

            @if (Model.ShowRequestId)
            {
                <div class="alert alert-light border d-inline-block px-4 py-2 rounded-pill mb-4 text-muted small animate-fade-up delay-300">
                    Error ID: <code>@Model.RequestId</code>
                </div>
            }

            <div class="d-flex justify-content-center gap-3 animate-fade-up delay-300">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary rounded-pill px-4">
                    <i class="bi bi-house me-2"></i>Return Home
                </a>
                <a href="#" onclick="history.back()" class="btn btn-outline-secondary rounded-pill px-4">
                    Go Back
                </a>
            </div>
        </div>
    </div>
</div>