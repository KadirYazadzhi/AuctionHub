@model IEnumerable<AuctionHub.Models.ViewModels.AuctionListViewModel>

@{
    ViewData["Title"] = "My Auctions";
}

<div class="text-center mb-5">
    <h1 class="display-4">My Auctions</h1>
    <p class="lead">Manage the items you are selling.</p>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        You haven't created any auctions yet. <a asp-action="Create">Start selling now!</a>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var auction in Model)
        {
            <partial name="_AuctionCardPartial" model="auction" />
        }
    </div>
}
