@model IEnumerable<AuctionHub.Models.ViewModels.AuctionListViewModel>

@{
    ViewData["Title"] = "Active Auctions";
}

<div class="text-center mb-5">
    <h1 class="display-4">Active Auctions</h1>
    <p class="lead">Find your next treasure or <a asp-action="Create">start selling today</a>.</p>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No active auctions found. Be the first to <a asp-action="Create">create one!</a>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var auction in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@(string.IsNullOrEmpty(auction.ImageUrl) ? "https://via.placeholder.com/300x200?text=No+Image" : auction.ImageUrl)" 
                         class="card-img-top" 
                         alt="@auction.Title" 
                         style="height: 200px; object-fit: cover;">
                    
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="badge bg-secondary">@auction.Category</span>
                            <small class="text-muted">Ends in: @auction.TimeRemaining</small>
                        </div>
                        <h5 class="card-title">@auction.Title</h5>
                        <h4 class="card-text text-primary font-weight-bold">
                            $@auction.CurrentPrice.ToString("N2")
                        </h4>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <div class="d-grid">
                            <a asp-action="Details" asp-route-id="@auction.Id" class="btn btn-outline-primary">View Details & Bid</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
