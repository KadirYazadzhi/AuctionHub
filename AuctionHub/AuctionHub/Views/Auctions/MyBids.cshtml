@model IEnumerable<AuctionHub.Models.ViewModels.AuctionListViewModel>

@{
    ViewData["Title"] = "My Bids";
}

<div class="text-center mb-5">
    <h1 class="display-4">My Bids</h1>
    <p class="lead">Track the auctions you've participated in.</p>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        You haven't placed any bids yet. <a asp-action="Index">Browse auctions and start bidding!</a>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var auction in Model)
        {
            <partial name="_AuctionCardPartial" model="auction" />
        }
    </div>
}
