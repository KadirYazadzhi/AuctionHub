@model IEnumerable<AuctionListViewModel>
@{
    ViewData["Title"] = "My Watchlist";
}

<div class="container py-4">
    <h2 class="mb-4"><i class="bi bi-star-fill text-warning me-2"></i>My Watchlist</h2>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info border-0 shadow-sm">
            <i class="bi bi-info-circle me-2"></i> You haven't added any auctions to your watchlist yet.
            <a asp-action="Index" class="alert-link">Browse auctions</a> to get started.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var auction in Model)
            {
                <div class="col">
                    <partial name="_AuctionCardPartial" model="auction" />
                </div>
            }
        </div>
    }
</div>
