@{
    ViewData["Title"] = "Selling Tips";
}

<div class="container py-5">
    <div class="text-center mb-5 animate-fade-up">
        <span class="badge bg-info-subtle text-info mb-3 px-4 py-2 rounded-pill">Pro Seller</span>
        <h1 class="display-4 fw-bold">Maximize your <span class="text-info">auction success</span>.</h1>
    </div>

    <div class="row g-5 justify-content-center">
        <div class="col-lg-10">
            <div class="row g-4">
                <div class="col-md-6 animate-fade-up delay-100">
                    <div class="p-4 rounded-5 bg-white border shadow-sm">
                        <h5 class="fw-bold"><i class="bi bi-camera me-2 text-info"></i> High-Quality Images</h5>
                        <p class="text-muted small">Listings with clear, well-lit photos sell 3x faster. Use natural light and capture all angles.</p>
                    </div>
                </div>
                <div class="col-md-6 animate-fade-up delay-100">
                    <div class="p-4 rounded-5 bg-white border shadow-sm">
                        <h5 class="fw-bold"><i class="bi bi-pencil-square me-2 text-info"></i> Detailed Descriptions</h5>
                        <p class="text-muted small">Be honest about the condition. Mention any flaws to build trust and avoid disputes.</p>
                    </div>
                </div>
                <div class="col-md-6 animate-fade-up delay-200">
                    <div class="p-4 rounded-5 bg-white border shadow-sm">
                        <h5 class="fw-bold"><i class="bi bi-tags me-2 text-info"></i> Competitive Starting Price</h5>
                        <p class="text-muted small">Start with a lower price to attract more bidders and build momentum early.</p>
                    </div>
                </div>
                <div class="col-md-6 animate-fade-up delay-200">
                    <div class="p-4 rounded-5 bg-white border shadow-sm">
                        <h5 class="fw-bold"><i class="bi bi-lightning-charge me-2 text-info"></i> Use "Buy It Now"</h5>
                        <p class="text-muted small">Add a "Buy It Now" price for impatient buyers who want the item immediately.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
