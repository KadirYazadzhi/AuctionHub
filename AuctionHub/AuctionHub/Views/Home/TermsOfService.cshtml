@{
    ViewData["Title"] = "Terms of Service";
}

<div class="container py-5">
    <div class="text-center mb-5 animate-fade-up">
        <div class="icon-box-lg bg-primary-subtle text-primary rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
            <i class="bi bi-file-earmark-text-fill fs-1"></i>
        </div>
        <h1 class="fw-bold">Terms of Service</h1>
        <p class="text-muted">Legal agreement and platform rules</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card border-0 shadow-sm rounded-5 bg-white p-4 p-lg-5 animate-fade-up">
                <div class="d-flex justify-content-between align-items-center mb-5 pb-3 border-bottom">
                    <span class="text-muted small fw-bold text-uppercase">Version 2.0</span>
                    <span class="text-muted small">Last Updated: Feb 7, 2026</span>
                </div>

                <div class="row g-5">
                    <div class="col-md-6">
                        <div class="mb-5">
                            <h5 class="fw-bold text-dark d-flex align-items-center mb-3">
                                <i class="bi bi-1-circle-fill text-primary me-2"></i> Acceptance
                            </h5>
                            <p class="text-muted small">By accessing and using AuctionHub, you agree to comply with and be bound by these terms. If you do not agree, please do not use the platform.</p>
                        </div>
                        <div class="mb-5">
                            <h5 class="fw-bold text-dark d-flex align-items-center mb-3">
                                <i class="bi bi-2-circle-fill text-primary me-2"></i> Bidding Rules
                            </h5>
                            <p class="text-muted small">A bid is a binding contract. If you win an auction, you are legally obligated to complete the purchase using our secure wallet system.</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-5">
                            <h5 class="fw-bold text-dark d-flex align-items-center mb-3">
                                <i class="bi bi-3-circle-fill text-primary me-2"></i> User Conduct
                            </h5>
                            <p class="text-muted small">Any attempt to manipulate auctions, engage in self-bidding, or use fraudulent accounts will result in immediate and permanent suspension.</p>
                        </div>
                        <div class="mb-5">
                            <h5 class="fw-bold text-dark d-flex align-items-center mb-3">
                                <i class="bi bi-4-circle-fill text-primary me-2"></i> Payments
                            </h5>
                            <p class="text-muted small">Funds are held in escrow until delivery is confirmed. Refund policies apply according to our buyer protection program.</p>
                        </div>
                    </div>
                </div>

                <div class="alert bg-primary-subtle border-0 rounded-4 p-4 mt-4">
                    <div class="d-flex">
                        <i class="bi bi-info-circle-fill text-primary fs-4 me-3"></i>
                        <p class="mb-0 text-primary-emphasis small">Please read these terms carefully. They contain important information about your legal rights, remedies, and obligations.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>