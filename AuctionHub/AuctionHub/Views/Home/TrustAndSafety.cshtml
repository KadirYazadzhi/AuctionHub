@{
    ViewData["Title"] = "Trust & Safety";
}

<div class="container py-5">
    <div class="row align-items-center mb-5 animate-fade-up">
        <div class="col-lg-6">
            <span class="badge bg-success-subtle text-success mb-3 px-4 py-2 rounded-pill">Security First</span>
            <h1 class="display-4 fw-bold mb-4">Your safety is our <span class="text-success">top priority</span>.</h1>
            <p class="lead text-muted">We use industry-leading technology and manual verification to keep our marketplace safe for everyone.</p>
        </div>
        <div class="col-lg-6 text-center">
            <i class="bi bi-shield-lock-fill display-1 text-success opacity-25"></i>
        </div>
    </div>

    <div class="row g-4 animate-fade-up delay-100">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-5 h-100 p-4 bg-white">
                <i class="bi bi-wallet2 fs-1 text-success mb-3"></i>
                <h4 class="fw-bold">Secure Escrow</h4>
                <p class="text-muted small">All bid funds are held in a secure escrow system until the transaction is successfully completed.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-5 h-100 p-4 bg-white">
                <i class="bi bi-person-check fs-1 text-success mb-3"></i>
                <h4 class="fw-bold">Verified Users</h4>
                <p class="text-muted small">We verify seller identities and maintain a strict reporting system to eliminate fraudulent activity.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-5 h-100 p-4 bg-white">
                <i class="bi bi-eye fs-1 text-success mb-3"></i>
                <h4 class="fw-bold">Auction Audits</h4>
                <p class="text-muted small">Our administration team manually reviews high-value auctions to ensure descriptions and images are accurate.</p>
            </div>
        </div>
    </div>
</div>
