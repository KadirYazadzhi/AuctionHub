@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container py-5">
    <div class="text-center mb-5 animate-fade-up">
        <div class="icon-box-lg bg-primary-subtle text-primary rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
            <i class="bi bi-shield-lock-fill fs-1"></i>
        </div>
        <h1 class="fw-bold">Privacy Policy</h1>
        <p class="text-muted">How we handle and protect your data</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card border-0 shadow-sm rounded-5 bg-white p-4 p-lg-5 animate-fade-up">
                <div class="mb-5">
                    <h4 class="fw-bold mb-4">Data we collect</h4>
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded-4 h-100">
                                <i class="bi bi-person-vcard text-primary fs-3 mb-2 d-block"></i>
                                <h6 class="fw-bold">Identity</h6>
                                <p class="text-muted x-small mb-0">Name, username, and email address provided during signup.</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded-4 h-100">
                                <i class="bi bi-wallet2 text-primary fs-3 mb-2 d-block"></i>
                                <h6 class="fw-bold">Transactions</h6>
                                <p class="text-muted x-small mb-0">History of bids, deposits, and payments within the platform.</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded-4 h-100">
                                <i class="bi bi-cpu text-primary fs-3 mb-2 d-block"></i>
                                <h6 class="fw-bold">Usage</h6>
                                <p class="text-muted x-small mb-0">IP addresses, browser types, and interaction logs.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-5">
                    <h4 class="fw-bold mb-3">How we use it</h4>
                    <p class="text-muted small">We use your information exclusively to operate our marketplace, facilitate bidding, and communicate important account notifications. We never sell your personal data to third-party marketing companies.</p>
                </div>

                <div class="p-4 bg-primary-subtle border-0 rounded-5">
                    <h5 class="fw-bold text-primary mb-2">GDPR Compliance</h5>
                    <p class="text-primary-emphasis small mb-0">You have the right to access, export, and request the deletion of your data at any time through your Profile Settings.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .x-small { font-size: 0.8rem; }
</style>
