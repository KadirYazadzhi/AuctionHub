@model ApplicationUser
@{
    ViewData["Title"] = "My Wallet";
    var transactions = ViewBag.Transactions as List<Transaction>;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card bg-white text-dark border-0 shadow-sm mb-4">
            <div class="card-body p-5 text-center">
                <h6 class="text-uppercase text-muted letter-spacing-2 mb-3">Current Balance</h6>
                <h1 class="display-4 fw-bold text-primary mb-4">@Model.WalletBalance.ToString("C")</h1>
                
                <button type="button" class="btn btn-primary btn-lg px-5 rounded-pill shadow-sm" data-bs-toggle="modal" data-bs-target="#addFundsModal">
                    <i class="bi bi-plus-lg me-2"></i>Add Funds
                </button>
            </div>
        </div>

        <h4 class="mb-3">Transaction History</h4>
        <div class="card bg-white text-dark border-0 shadow-sm">
            <div class="card-body p-0">
                @if (transactions != null && transactions.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Type</th>
                                    <th class="text-end">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var t in transactions)
                                {
                                    <tr>
                                        <td>@t.TransactionDate.ToLocalTime().ToString("g")</td>
                                        <td>@t.Description</td>
                                        <td>
                                            @if(t.TransactionType == "Deposit" || t.TransactionType == "Refund" || t.TransactionType == "Sale")
                                            {
                                                <span class="badge bg-success bg-opacity-10 text-success">@t.TransactionType</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger bg-opacity-10 text-danger">@t.TransactionType</span>
                                            }
                                        </td>
                                        <td class="text-end fw-bold @(t.TransactionType == "Deposit" || t.TransactionType == "Refund" || t.TransactionType == "Sale" ? "text-success" : "text-danger")">
                                            @t.Amount.ToString("C")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-4 text-center text-muted">
                        No transactions found.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addFundsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Add Funds to Wallet</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body pt-4">
                <form asp-action="AddFunds" method="post">
                    <div class="mb-4">
                        <label class="form-label text-muted small text-uppercase">Amount</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text border-end-0 bg-light text-muted">$</span>
                            <input type="number" name="amount" class="form-control border-start-0 bg-light" placeholder="0.00" step="0.01" min="0.01" required>
                        </div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Confirm Deposit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>