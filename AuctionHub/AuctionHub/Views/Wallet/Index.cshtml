@model AuctionHub.Models.ApplicationUser

@{
    ViewData["Title"] = "My Wallet";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <div class="avatar-lg bg-primary-subtle text-primary rounded-circle d-inline-flex align-items-center justify-content-center p-4 mb-3">
                            <i class="bi bi-wallet2 display-4"></i>
                        </div>
                        <h2 class="fw-bold">My Wallet</h2>
                        <p class="text-muted">Manage your funds securely</p>
                    </div>

                    <div class="bg-light rounded-4 p-4 mb-4">
                        <small class="text-uppercase text-muted fw-bold ls-1">Current Balance</small>
                        <h1 class="display-3 fw-bolder text-primary mb-0">@Model.WalletBalance.ToString("C")</h1>
                    </div>

                    <hr class="my-4" />

                    <form asp-action="AddFunds" method="post" class="text-start">
                        <label class="form-label fw-bold">Add Funds</label>
                        <div class="input-group input-group-lg mb-3">
                            <span class="input-group-text bg-white">$</span>
                            <input type="number" name="amount" class="form-control" placeholder="0.00" min="10" step="10" required>
                            <button class="btn btn-primary px-4" type="submit">Deposit</button>
                        </div>
                        <small class="text-muted"><i class="bi bi-shield-check me-1"></i> Secure payment processing (Simulation)</small>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
