@model IEnumerable<AuctionListViewModel>
@{
    ViewData["Title"] = "Manage Auctions";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>All Auctions</h2>
</div>

<div class="card bg-white text-dark border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Current Price</th>
                        <th>End Time</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <div class="d-flex align-items-center">
                                    <img src="@item.ImageUrl" alt="" class="rounded me-3" style="width: 40px; height: 40px; object-fit: cover;">
                                    <strong>@item.Title</strong>
                                </div>
                            </td>
                            <td class="align-middle">@item.Category</td>
                            <td class="align-middle">@item.CurrentPrice.ToString("C")</td>
                            <td class="align-middle">@item.EndTime.ToLocalTime().ToString("g")</td>
                            <td class="align-middle">
                                @if (item.IsActive && item.EndTime > DateTime.UtcNow)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Closed</span>
                                }
                            </td>
                            <td class="align-middle">
                                <a asp-area="" asp-controller="Auctions" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" target="_blank">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this auction? This action is irreversible.');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
