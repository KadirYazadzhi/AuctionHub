@model IEnumerable<Category>
@{
    ViewData["Title"] = "Manage Categories";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Categories</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i> Add New Category
    </a>
</div>

<div class="card bg-white text-dark border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Auctions Count</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">@item.Id</td>
                            <td class="align-middle"><strong>@item.Name</strong></td>
                            <td class="align-middle">@item.Auctions.Count</td>
                            <td class="align-middle">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" @(item.Auctions.Any() ? "disabled title='Cannot delete category with auctions'" : "")>
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
