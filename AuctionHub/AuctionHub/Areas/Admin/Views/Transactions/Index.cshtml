@model IEnumerable<AuctionHub.Application.DTOs.TransactionDto>
@{
    ViewData["Title"] = "Global Transactions";
}

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-up">
    <div>
        <h2 class="fw-bold mb-1">Transaction Log</h2>
        <p class="text-muted">Real-time financial activity (Last 100).</p>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-5 overflow-hidden animate-fade-up delay-100">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 border-0 py-3">User</th>
                        <th class="border-0 py-3">Type</th>
                        <th class="border-0 py-3">Description</th>
                        <th class="border-0 py-3">Date</th>
                        <th class="border-0 py-3 text-end pe-4">Amount</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-xs bg-primary-subtle text-primary rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
                                        <i class="bi bi-person"></i>
                                    </div>
                                    <span class="fw-bold">@t.User</span>
                                </div>
                            </td>
                            <td>
                                @switch (t.TransactionType)
                                {
                                    case "Deposit": <span class="badge bg-success-subtle text-success border rounded-pill px-3">Deposit</span> break;
                                    case "Refund": <span class="badge bg-info-subtle text-info border rounded-pill px-3">Refund</span> break;
                                    case "AdminBonus": <span class="badge bg-success-subtle text-success border rounded-pill px-3">Bonus</span> break;
                                    case "AdminPenalty": <span class="badge bg-danger-subtle text-danger border rounded-pill px-3">Penalty</span> break;
                                    case "Bid": <span class="badge bg-warning-subtle text-warning border rounded-pill px-3">Bid</span> break;
                                    case "Purchase": <span class="badge bg-primary-subtle text-primary border rounded-pill px-3">Purchase</span> break;
                                    default: <span class="badge bg-secondary-subtle text-secondary border rounded-pill px-3">@t.TransactionType</span> break;
                                }
                            </td>
                            <td class="text-muted small">@t.Description</td>
                            <td class="text-muted small">@t.TransactionDate.ToLocalTime().ToString("g")</td>
                            <td class="text-end pe-4 fw-bold @(t.TransactionType == "Deposit" || t.TransactionType == "Refund" || t.TransactionType == "AdminBonus" ? "text-success" : "text-danger")">
                                @((t.TransactionType == "Deposit" || t.TransactionType == "Refund" || t.TransactionType == "AdminBonus" ? "+" : "-") + t.Amount.ToString("C"))
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
