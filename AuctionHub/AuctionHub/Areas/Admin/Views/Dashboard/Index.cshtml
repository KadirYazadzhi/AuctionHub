@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-4">Administrative Overview</h2>

<div class="row g-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">Total Users</h6>
                        <h2 class="card-title mb-0">@ViewBag.TotalUsers</h2>
                    </div>
                    <i class="bi bi-people-fill fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">Active Auctions</h6>
                        <h2 class="card-title mb-0">@ViewBag.ActiveAuctions</h2>
                    </div>
                    <i class="bi bi-hammer fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">Total Bids</h6>
                        <h2 class="card-title mb-0">@ViewBag.TotalBids</h2>
                    </div>
                    <i class="bi bi-graph-up-arrow fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">Economy Size</h6>
                        <h2 class="card-title mb-0">@ViewBag.TotalWalletBalance.ToString("C")</h2>
                    </div>
                    <i class="bi bi-cash-coin fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-5">
    <h3>Quick Actions</h3>
    <div class="row mt-3">
        <div class="col-md-4">
            <a asp-controller="Auctions" asp-action="Index" class="btn btn-outline-light btn-lg w-100 p-4">
                <i class="bi bi-search me-2"></i> Audit All Auctions
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-light btn-lg w-100 p-4">
                <i class="bi bi-folder-plus me-2"></i> Manage Categories
            </a>
        </div>
    </div>
</div>
