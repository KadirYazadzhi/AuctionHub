<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel - AuctionHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .admin-sidebar {
            min-height: 100vh;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-right: 1px solid rgba(255, 255, 255, 0.1);
        }
        .admin-nav-link {
            color: #fff;
            padding: 1rem;
            display: block;
            text-decoration: none;
            transition: all 0.3s;
        }
        .admin-nav-link:hover {
            background: rgba(255, 255, 255, 0.2);
            padding-left: 1.5rem;
        }
        .admin-nav-link.active {
            background: var(--bs-primary);
            font-weight: bold;
        }
    </style>
</head>
<body class="bg-dark text-white">
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block admin-sidebar p-0">
                <div class="p-3 mb-4">
                    <h4 class="text-primary"><i class="bi bi-shield-lock-fill me-2"></i>Admin Hub</h4>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="admin-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>
                    <a asp-area="Admin" asp-controller="Auctions" asp-action="Index" class="admin-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Auctions" ? "active" : "")">
                        <i class="bi bi-hammer me-2"></i> Auctions
                    </a>
                    <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="admin-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Categories" ? "active" : "")">
                        <i class="bi bi-tags me-2"></i> Categories
                    </a>
                    <hr class="mx-3 opacity-25">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="admin-nav-link">
                        <i class="bi bi-arrow-left me-2"></i> Back to Site
                    </a>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 ms-sm-auto px-md-4 py-4">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show bg-success text-white border-0 mb-4" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show bg-danger text-white border-0 mb-4" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
