@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-75 py-5">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-xl animate-fade-up">
                <div class="card-body p-5 text-center">
                    <div class="icon-box-lg rounded-circle bg-success-subtle text-success mb-4 mx-auto d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="bi bi-check-circle-fill fs-1"></i>
                    </div>
                    <h2 class="fw-bold mb-3">Check your email</h2>
                    <p class="text-muted mb-4">If an account with that email exists, we have sent instructions on how to reset your password. Please check your inbox and spam folder.</p>
                    
                    <a asp-page="./Login" class="btn btn-primary rounded-pill px-5 py-2 fw-bold shadow-sm hover-lift">Return to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
