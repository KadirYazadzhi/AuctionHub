@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="fw-bold mb-4">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<form id="profile-form" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    
    <div class="row g-4 mb-4">
        <div class="col-md-4 text-center">
            <div class="position-relative d-inline-block">
                <div class="avatar-xl rounded-circle overflow-hidden shadow-sm border border-4 border-white bg-light" style="width: 150px; height: 150px;">
                    @if (!string.IsNullOrEmpty(Model.CurrentProfilePictureUrl))
                    {
                        <img src="@Model.CurrentProfilePictureUrl" class="w-100 h-100 object-fit-cover" alt="Profile" />
                    }
                    else
                    {
                        <div class="w-100 h-100 d-flex align-items-center justify-content-center text-secondary">
                            <i class="bi bi-person-fill display-1"></i>
                        </div>
                    }
                </div>
                <label for="profileUpload" class="btn btn-primary btn-sm rounded-circle position-absolute bottom-0 end-0 mb-2 me-2 shadow-sm" style="width: 32px; height: 32px; padding: 0; display: flex; align-items: center; justify-content: center;" title="Upload new picture">
                    <i class="bi bi-camera-fill"></i>
                </label>
                <input asp-for="Input.ProfilePicture" id="profileUpload" type="file" class="d-none" accept=".jpg,.jpeg,.png,.webp" onchange="previewImage(this)" />
            </div>
            <div class="mt-2">
                <span class="text-muted small">Allowed: JPG, PNG, WEBP (Max 2MB)</span>
                <span asp-validation-for="Input.ProfilePicture" class="text-danger d-block small"></span>
            </div>
        </div>

        <div class="col-md-8">
            <div class="row g-3">
                <div class="col-12 mb-2">
                    <label asp-for="Username" class="form-label small text-muted text-uppercase fw-bold"></label>
                    <input asp-for="Username" class="form-control bg-light" disabled />
                </div>
                
                <div class="col-12 mb-2">
                    <label asp-for="Input.PhoneNumber" class="form-label small text-muted text-uppercase fw-bold"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone number" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-2">
                    <label asp-for="Input.FirstName" class="form-label small text-muted text-uppercase fw-bold"></label>
                    <input asp-for="Input.FirstName" class="form-control" placeholder="First name" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-2">
                    <label asp-for="Input.LastName" class="form-label small text-muted text-uppercase fw-bold"></label>
                    <input asp-for="Input.LastName" class="form-control" placeholder="Last name" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-end">
        <button id="update-profile-button" type="submit" class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm">Save Changes</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var img = document.querySelector('.avatar-xl img');
                    if (!img) {
                        // If no image existed (default icon), create one
                        var container = document.querySelector('.avatar-xl');
                        container.innerHTML = '<img src="" class="w-100 h-100 object-fit-cover" alt="Profile" />';
                        img = container.querySelector('img');
                    }
                    img.src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}