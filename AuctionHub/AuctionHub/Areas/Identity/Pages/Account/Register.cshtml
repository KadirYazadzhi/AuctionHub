@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-75 py-5">
        <div class="col-md-7 col-lg-6">
            <div class="card border-0 shadow-lg rounded-xl animate-fade-up">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="icon-box-lg rounded-circle bg-primary-subtle text-primary mb-3 mx-auto d-flex align-items-center justify-content-center">
                            <i class="bi bi-person-plus-fill"></i>
                        </div>
                        <h2 class="fw-bold">Create Account</h2>
                        <p class="text-muted">Join the community and start bidding today</p>
                    </div>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="row g-2 mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password">Password</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.ConfirmPassword">Confirm</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <span asp-validation-for="Input.Password" class="text-danger small d-block"></span>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small d-block"></span>
                            </div>
                        </div>

                        <button id="registerSubmit" type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold shadow-sm hover-lift">Create Account</button>
                    </form>
                    
                    <div class="text-center mt-4 pt-3 border-top">
                        <p class="text-muted mb-0">Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-bold text-decoration-none">Log in</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
